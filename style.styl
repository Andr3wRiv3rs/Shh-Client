// Colors

$dark-gray = rgb(45,45,45)
$darker-gray = rgb(30,30,30)
$white = rgb(220,220,220)

// Fonts

@font-face
    src url('./assets/Raleway-Regular.ttf')
    font-family 'Raleway'

$font-1 = 'Raleway'

// Sizes

$nav-height = 8vh

*
    margin 0
    padding 0
    font-family $font-1
    color $white
    box-sizing border-box

body,html
    height 100%
    width 100%
    overflow hidden
    background $darker-gray

body>*
    float left

.contacts
    width 5em
    height 100%
    background-color $white

.chat
    height 100%
    width calc(100% - 5em)
    &>*
        width 100%
    .top
        height $nav-height
        text-align center
        background-color $dark-gray

        h2
            height 100%
            line-height $nav-height
    .bottom
        height "calc(100% - %s)" % $nav-height
        &>*
            height 100%
            width 100%


.chat-log
    height 94%
    width 100%
    .message
        width 100%
        padding 2vh
        display block
        overflow auto
        &>*
            position relative
            float left
        .avatar
            width 8%
            background-color white
            &:before
                content ""
                display block
                padding-top 100%
        .content
            $msg-padding = 20px
            width 92%
            padding-left $msg-padding
            padding-right $msg-padding
            color alpha($white,0.7)
            .username
                font-weight 800
                margin-bottom 5px

input,button,textarea
    outline none
    border none
    resize none
    padding 1em
    background alpha($white,0.2)
    ::selection
        background #ffb7b7

.chat-input
    width 100%
    height 6%
    font-size 0.9em
    vertical-align center
    line-height 100%